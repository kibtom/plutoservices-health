@page
@model ContactModel

@{
    ViewData["Title"] = "Contact";
}
<h1>@ViewData["Title"]</h1>

<div class="container">
<!--Section: Contact v.2-->

<section class="mb-4">

    <!--Section heading-->
    <h2 class="h1-responsive font-weight-bold text-center my-4">Contact us</h2>
    <!--Section description-->
    <p class="text-center w-responsive mx-auto mb-3">Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to you within
        a matter of hours to help you.</p>

    <div class="row">

        <!--Grid column-->
        <div class="col-md-9 mb-md-0 mb-5">
              <form id="contact-form" method="post">
                <div asp-validation-summary="All" class="val-error"></div>

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <label asp-for="FeedbackForm.UserName" class="font-weight-bold"></label>
                             @* <label for="name" class="">Your name</label> *@
                            <input asp-for="FeedbackForm.UserName" type="text" id="name" name="FeedbackForm.UserName" class="form-control" placeholder="Enter your Full name" >
                           @* <span asp-validation-for="FeedbackForm.UserName" class="val-error"></span> *@
                        </div>
                    </div>
                    <!--Grid column-->

                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <label asp-for="FeedbackForm.UserEmailAddress" class="font-weight-bold"></label>
                            <input asp-for="FeedbackForm.UserEmailAddress" type="text" id="email" name="FeedbackForm.UserEmailAddress" placeholder="Enter an Email: me@example.com" class="form-control">
                           
                        </div>
                    </div>
                    <!--Grid column-->

                </div>
                <!--Grid row-->
              
                <!--Grid row-->
                <div class="row">
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                               <label asp-for="FeedbackForm.UserPhoneNumber" class="font-weight-bold"></label>
                            <input asp-for="FeedbackForm.UserPhoneNumber" type="number" id="phone" name="FeedbackForm.UserPhoneNumber" class="form-control" placeholder="Enter Phone number">
                         
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                             <label asp-for="FeedbackForm.UserPostcode" class="font-weight-bold"></label>
                            <input asp-for="FeedbackForm.UserPostcode" type="text" id="postcode" name="FeedbackForm.UserPostcode" placeholder="Enter Postcode" class="form-control">
                           
                        </div>
                    </div>
                </div>
                <!--Grid row-->
             
                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-12">

                        <div class="md-form">
                             <label asp-for="FeedbackForm.UserMessage" class="font-weight-bold"></label>
                            <textarea asp-for="FeedbackForm.UserMessage" type="text" id="message" name="FeedbackForm.UserMessage" rows="2" class="form-control md-textarea" placeholder="Write a Message"></textarea>
                            <br />
                           
                        </div>

                    </div>
                </div>
                <!--Grid row-->

            <div class="text-center text-md-left">
                @* <a class="btn btn-primary" onclick="document.getElementById('contact-form').submit();">Send</a> *@

                 <button type="submit" class="btn btn-success">Submit</button>
                <button type="reset" class="btn btn-warning">Clear</button>
            </div>
            <div class="status"></div>
            </form>
        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-md-3 text-left">
                 <address>
            23 Billing Road<br />
            Northampton<br />
            NN1 5AT<br /><br /><hr />

            <abbr class="fa fa-mobile-phone" style="font-size:28px; color:green">:</abbr> 07932 790 842<br />
            <abbr class="fa fa-phone" style="font-size:28px;">:</abbr>01604 630 916 <br />
            <abbr class="fa fa-envelope" style="font-size:28px;color:orange">:</abbr>
            <a style="font-size:14px;" href="mailto:info@plutobvservices.co.uk" >info@plutobvservices.co.uk</a> <br />

        </address>
        </div>
        <!--Grid column-->

    </div>

</section>
<!--Section: Contact v.2-->


